<header>
  <nav class='navbar navbar-expand-lg navigation bg-info py-0' data-bs-theme="light">
    <%= link_to root_path, class: 'navbar-brand py-0', id: 'logo-link' do %>
      <%= image_tag 'title_logo1.jpg', width: '245', height: '70' %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <% if user_signed_in? %>
          <li class='nav-item dropdown dropdown-slide'>
            <%= link_to t('header.character_page'), '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, role: 'button', id: 'header-character-menu' %>
            <div class='dropdown-menu dropdown-menu-end'>
              <%= link_to t('header.character_index'), characters_path, class: 'dropdown-item' %>
              <%= link_to t('header.character_create'), new_character_path, class: 'dropdown-item' %>
            </div>
          </li>

          <li class='nav-item'>
            <%= link_to t('header.logout'), destroy_user_session_path, class: 'nav-link', data: { turbo_method: :delete } %>
          </li>

          <li class='nav-item'>
            <%= link_to t('header.user_page', name: current_user.name), edit_user_registration_path, class: 'nav-link text-truncate', style: 'max-width: 150px;' %>
          </li>
        <% else %>
          <li class='nav-item'>
            <%= link_to t('header.login'), new_user_session_path, class: 'nav-link' %>
          </li>

          <li class='nav-item'>
            <%= link_to t('header.registration'), new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>