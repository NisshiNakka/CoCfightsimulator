<%= turbo_stream.update "dice_result" do %>
  <div class="row g-3">
    <div class="col-md-6">
      <div class="alert <%= @ally_res[:success] ? 'alert-success' : 'alert-warning' %> border-start border-4">
        <h5 class="fw-bold">味方の攻撃 → 敵</h5>
        <p class="mb-1">【<%= @ally_res[:status] %>】</p>
        <small><%= @ally_res[:text] %></small>
      </div>
    </div>
      
    <div class="col-md-6">
      <div class="alert <%= @enemy_res[:success] ? 'alert-danger' : 'alert-info' %> border-start border-4">
        <h5 class="fw-bold">敵の攻撃 → 味方</h5>
        <p class="mb-1">【<%= @enemy_res[:status] %>】</p>
        <small><%= @enemy_res[:text] %></small>
      </div>
    </div>
  </div>
<% end %>